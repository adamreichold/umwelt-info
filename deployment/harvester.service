[Unit]
Description=umwelt.info harvester service

[Service]
User=umwelt-info
Group=umwelt-info
Environment=RUST_LOG=info DATA_PATH=/var/lib/umwelt-info

Type=oneshot
ExecStart=harvester
ExecStart=indexer

ProtectSystem=strict
ProtectHome=yes
ReadWritePaths=/var/lib/umwelt-info
PrivateDevices=yes
PrivateTmp=yes
PrivateUsers=yes
NoNewPrivileges=yes
SystemCallFilter=@system-service
